			"name": "Request 1 – TC01 – Create post",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// TC01 – Happy path: valid post creation",
							"",
							"pm.test(\"TC01 – Status is 201 Created\", function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"",
							"pm.test(\"TC01 – Response is valid JSON\", function () {",
							"    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
							"    pm.response.to.be.withBody;",
							"    const json = pm.response.json();",
							"    pm.expect(json).to.be.an('object');",
							"});",
							"",
							"pm.test(\"TC01 – Response contains required fields\", function () {",
							"    const json = pm.response.json();",
							"    pm.expect(json).to.have.property(\"id\");",
							"    pm.expect(json).to.have.property(\"title\");",
							"    pm.expect(json).to.have.property(\"body\");",
							"    pm.expect(json).to.have.property(\"userId\");",
							"});",
							"",
							"pm.test(\"TC01 – Response echoes sent values (as much as mock allows)\", function () {",
							"    const json = pm.response.json();",
							"    pm.expect(json.title).to.eql(\"My QA automation post\");",
							"    pm.expect(json.body).to.eql(\"Testing API happy path\");",
							"    pm.expect(json.userId).to.eql(1);",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
